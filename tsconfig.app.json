{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@modules/*": ["./src/app/modules/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "files": [
    "./src/main.ts",
    "./src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
